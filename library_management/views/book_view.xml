<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="book_view_tree" model="ir.ui.view">
        <field name="name">book.book.tree</field>
        <field name="model">book.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author"/>
                <field name="publication_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="book_view_form" model="ir.ui.view">
        <field name="name">book.book.form</field>
        <field name="model">book.book</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="publication_date"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="book_action_view" model="ir.actions.act_window">
        <field name="name">Library</field>
        <field name="res_model">book.book</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_book_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="book_menu" name="Library" action="book_action_view" sequence="1"/>

</odoo>
